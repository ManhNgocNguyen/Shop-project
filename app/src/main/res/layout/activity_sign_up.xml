<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    android:orientation="vertical"
    tools:context="activity.SignUpActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="302dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="27dp"
        android:text="Sign Up"
        android:textColor="#00BCD4"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Tài khoản"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTaiKhoanSignUp"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_custom"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewPassword"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Mật khẩu"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextMatKhauSignUp"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_custom"
            android:ems="10"
            android:inputType="textPassword" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Tên"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTenSignUp"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_custom"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Địa chỉ"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextDiaChiSignUp"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_custom"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Năm sinh"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNamSinhSignUp"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_custom"
            android:ems="10"
            android:inputType="numberSigned" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Ảnh"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/edit_text_custom"
            android:id="@+id/imageViewHinhKhachHangSignUp"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_photo_library_24"
            android:id="@+id/imageViewLibrary"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonDangKi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint= "@color/teal_200"
        android:text="Đăng kí" />



</LinearLayout>